# Copy to `.env.local` (or your platform's secret store)
# Never commit real secrets.

# Public URLs
PUBLIC_APP_URL=https://example.com
AUTH_REDIRECT_TO=https://example.com/auth/callback

# Database/Auth provider (example names)
NEXT_PUBLIC_DB_URL=https://example-db.example.com
NEXT_PUBLIC_DB_ANON_KEY=example_public_key
DB_SERVICE_ROLE_KEY=example_service_role_key

# API base (if you have separate services)
NEXT_PUBLIC_API_BASE_URL=https://api.example.com

# Object storage (S3-compatible)
STORAGE_ACCOUNT_ID=example_account_id
STORAGE_ACCESS_KEY_ID=example_access_key_id
STORAGE_SECRET_ACCESS_KEY=example_secret_access_key
STORAGE_BUCKET=example-bucket
STORAGE_ENDPOINT=https://example.storage.provider.com
STORAGE_PUBLIC_BASE_URL=https://cdn.example.com

# Bot challenges / CAPTCHA (optional)
NEXT_PUBLIC_CAPTCHA_SITE_KEY=example_site_key
CAPTCHA_SECRET_KEY=example_secret_key

# Observability (optional)
ERROR_TRACKING_DSN=example_dsn
LOG_TOKEN=example_log_token

# Email (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=1234
SMTP_USER=example
SMTP_PASS=example
